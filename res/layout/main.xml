<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="5">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cityName" android:layout_weight="80" android:textSize="24dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/city"
                android:id="@+id/list" android:textSize="24dp"/>
    </LinearLayout>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listweather" android:layout_weight="90"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/refresh"
            android:id="@+id/load" android:layout_weight="5" android:textSize="24dp"/>
</LinearLayout>

